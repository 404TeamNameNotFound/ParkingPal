<%= javascript_include_tag "lat_lon.js" %>
<p id="notice"><%= notice %></p>
<script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>
<%= javascript_include_tag 'index' %>
<%= stylesheet_link_tag 'index' %>

<div id="main-container" class="container-fluid">
  <div class="row" id="main-row">
    <div id="nav" class="col-sm-3">
      <div class="row">
        <ul class="nav nav-pills nav-justified" role="tablist" id="search-tabs">
          <li role="presentation" class="active"><a href="#id" role="tab" data-toggle="tab">Search by ID</a></li>
          <li role="presentation"><a href="#location" role="tab" data-toggle="tab">Search by Location</a></li>
        </ul>
      </div>

      <div class="tab-content" id="search-tabs-content">
        <div role="tabpanel" class="tab-pane active" id="id">
          <div class="row">
            <div class="input-group">
              <input type="text" class="form-control" placeholder="Search by ID...">
              <span class="input-group-btn">
                <button class="btn btn-default" type="button">
                  <span class="glyphicon glyphicon-search"></span>
                </button>
              </span>
            </div>
          </div>


        </div>
        <div role="tabpanel" class="tab-pane" id="location">
          <div class="row">
            <form action="/lat_lons" method="get" class="form-horizontal">
              <div class="form-group">
                <label for="location" class="col-sm-3 control-label">Location:</label>
                <div class="col-sm-9">
                  <input type="text" class="form-control" name="location" id="location" placeholder="Enter a Location">
                </div>
                <div class="checkbox col-sm-offset-3 col-sm-9">
                  <label><input id="current_location" name="current_location" type="checkbox" value="1">Use current location</label>
                </div>
              </div>
               <div class="form-group">
                <label for="radius" class="col-sm-3 control-label">Radius:</label>
                <div class="col-sm-9">
                  <input type="number" min="0" class="form-control" name="radius" id="radius" placeholder="Enter a Radius">
                </div>
              </div>
              <div class="form-group">
                <label for="search_type" class="col-sm-3 control-label">Search Type: </label>
                <div class="col-sm-9">
                  <select name="search_type" id="search_type" class="form-control">
                    <option value="cheapest">Cheapest</option>
                    <option value="closest">Closest</option>
                  </select> 
                </div>
              </div>
              <div class="form-group">
                <div class="checkbox col-sm-offset-3 col-sm-9">
                  <label><input id="no_broken" name="no_broken" type="checkbox" value="true"> No Broken</label>
                  <label><input id="no_occupied" name="no_occupied" type="checkbox" value="true"> No Occupied</label>
                  <label><input id="no_after_hours" name="no_after_hours" type="checkbox" value="true"> No After Hours</label>
                </div>
              </div>
              <div class="form-group">
                <div class="col-sm-offset-3 col-sm-9">
                  <button type="submit" class="btn btn-default">Search</button>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
      <hr>

      <div class="row" id="search-results">
        <div class="page-header">
          <h1><small>Results:</small></h1>
        </div>
        <div class="list-group">
          <% if @lat_lons.each do |element| %>
          <button type="button" class="list-group-item"><b> Meter No. </b><span id="results-meter-id"><%= element.parking_meter.name %></span></button>
          <% end.empty? %>
          <div class="well">No meters to display.</div>
          <% end %>
        </div>
      </div>

      <div class="row" id="meter-details">
        <button type="button" class="btn btn-default" id="back-to-results">
          <span class="glyphicon glyphicon-chevron-left"></span> Back
        </button>
        <div id="meter-heading">
          <h1>Meter No. <span id="meter-name">#</span></h1>
          <div id="meter-broken-occupied-labels">
            <div><span class="label label-success" id="meter-broken">Not Broken</span></div>
            <div><span class="label label-success" id="meter-occupied">Not Occupied</span></div>
          </div>
        </div>
        <table class="table">
          <tr>
            <td>Price:</td>
            <td id="meter-price"></td>
          </tr>
          <tr>
            <td>Max Time:</td>
            <td id="meter-max-time"></td>
          </tr>
          <tr>
            <td>Start Time:</td>
            <td id="meter-start-time"></td>
          </tr>
          <tr>
            <td>End Time:</td>
            <td id="meter-end-time"></td>
          </tr>
        </table>
        <% if current_user %>
        <div class="page-header">
          <h1><small>Edit Tags:</small></h1>
        </div>
        <div class="checkbox">
          <label>
            <input id="tag-broken" type="checkbox"> Broken
          </label>
        </div>
        <div class="checkbox">
          <label>
            <input id="tag-occupied" type="checkbox"> Occupied
          </label>
        </div>
        <% end %>
<!--         <div class="btn-group btn-group-justified" role="group">
          <div class="btn-group" role="group">
            <button type="button" class="btn btn-default" id="mark-broken">Mark as Broken</button>
          </div>
          <div class="btn-group" role="group">
            <button type="button" class="btn btn-default" id="mark-occupied">Mark as Occupied</button>
          </div> -->
      </div>
    </div>
    <div id="map" class="col-sm-9"></div>
  </div>
</div>

<script type="text/javascript">
handler = Gmaps.build('Google');
handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
  console.log(<%=raw @hash.to_json %>);
  markers = <%=raw @hash.to_json %>

  Gmaps.store = {}
  Gmaps.store.markers = markers.map(function(m) {
    marker = handler.addMarker(m);
  marker.serviceObject.set('meter_id', m.meter_id); // You can add other attributes using set
  return marker;
});
  handler.bounds.extendWith(Gmaps.store.markers);
  handler.fitMapToBounds();

  for (var i = 0; i <  Gmaps.store.markers.length; ++i) {
    var marker = Gmaps.store.markers[i];
    google.maps.event.addListener(marker.serviceObject, 'click', onMarkerClick(marker.serviceObject, window.event));
  }

});

$('#tag-broken').click(function() {
  update_tag()});

$('#tag-occupied').click(function() {
  update_tag()});

</script>

