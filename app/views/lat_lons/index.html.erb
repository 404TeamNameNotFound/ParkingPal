<p id="notice"><%= notice %></p>
<script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>
<%= javascript_include_tag 'index' %>
<%= stylesheet_link_tag 'index' %>

<div id="main-container" class="container-fluid">
  <div class="row" id="main-row">
    <div id="nav" class="col-sm-3">
      <div class="row">
        <ul class="nav nav-pills nav-justified" role="tablist" id="search-tabs">
          <li role="presentation" class="active"><a href="#id" role="tab" data-toggle="tab">Search by ID</a></li>
          <li role="presentation"><a href="#location" role="tab" data-toggle="tab">Search by Location</a></li>
        </ul>
      </div>

      <div class="tab-content" id="search-tabs-content">
        <div role="tabpanel" class="tab-pane active" id="id">
          <div class="row">
            <div class="input-group">
              <input type="text" class="form-control" placeholder="Search by ID...">
              <span class="input-group-btn">
                <button class="btn btn-default" type="button">
                  <span class="glyphicon glyphicon-search"></span>
                </button>
              </span>
            </div>
          </div>
        </div>
        <div role="tabpanel" class="tab-pane" id="location">
          <div class="row">
            Search by location
          </div>
        </div>
      </div>

    </div>
    <div id="map" class="col-sm-9"></div>
  </div>
</div>

<script type="text/javascript">
handler = Gmaps.build('Google');
handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
  console.log(<%=raw @hash.to_json %>);
  markers = <%=raw @hash.to_json %>

  Gmaps.store = {}
  Gmaps.store.markers = markers.map(function(m) {
    marker = handler.addMarker(m);
  marker.serviceObject.set('id', m.meter_id); // You can add other attributes using set
  return marker;
});
  handler.bounds.extendWith(Gmaps.store.markers);
  handler.fitMapToBounds();

  for (var i = 0; i <  Gmaps.store.markers.length; ++i) {
    var marker = Gmaps.store.markers[i];
    google.maps.event.addListener(marker.serviceObject, 'click', onMarkerClick(marker.serviceObject, event));
  }

});


function onMarkerClick(marker, event){
  return function(event){
    alert(marker.id)
  }
}
</script>



