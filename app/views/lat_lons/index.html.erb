
<% if current_user && current_user.admin? %>
    <p id="notice"><%= notice %></p>

    <h1>Listing Lat Lons</h1>

<table>
  <thead>
    <tr>
      <th>Lat</th>
      <th>Lon</th>
      <th>Parking meter</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lat_lons.each do |lat_lon| %>
      <tr>
        <td><%= lat_lon.lat %></td>
        <td><%= lat_lon.lon %></td>
        <td><%= lat_lon.parking_meter %></td>
        <td><%= link_to 'Show', lat_lon %></td>
        <td><%= link_to 'Edit', edit_lat_lon_path(lat_lon) %></td>
        <td><%= link_to 'Destroy', lat_lon, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

    <%= link_to 'New Lat lon', new_lat_lon_path %>
    <% else %>
    <h1 style="color:#b80001">You do not have access to this page!</h1>
    <p> You need to be an admin to see this page.</p>
    <%= link_to 'Go back to the home page', '/' %>
    <img src="http://memesvault.com/wp-content/uploads/Sad-Meme-Face-10.png" style="width:128px;height:128px;">
<% end %>