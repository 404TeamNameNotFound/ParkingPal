<p id="notice"><%= notice %></p>

<h1>Listing Parking Meters</h1>

<table>
  <thead>
    <tr>
      <th>Meter</th>
      <th>Price</th>
      <th>Max time</th>
      <th>Start time</th>
      <th>End time</th>
      <th>Is broken</th>
      <th>Is occupied</th>
      <th>Lat</th>
      <th>Lon</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @parking_meters.each do |parking_meter| %>
      <tr>
        <td><%= parking_meter.name %></td>
        <td><%= parking_meter.price %></td>
        <td><%= parking_meter.max_time %></td>
        <td><%= parking_meter.start_time %></td>
        <td><%= parking_meter.end_time %></td>
        <td><%= parking_meter.is_broken %></td>
        <td><%= parking_meter.is_occupied %></td>
        <td><%= parking_meter.lat_lon.lat %></td>
        <td><%= parking_meter.lat_lon.lon %></td>
        <td><%= link_to 'Show', parking_meter %></td>
        <td><%= link_to 'Edit', edit_parking_meter_path(parking_meter) %></td>
        <td><%= link_to 'Destroy', parking_meter, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

