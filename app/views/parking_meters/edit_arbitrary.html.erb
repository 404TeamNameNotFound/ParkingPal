<%= javascript_include_tag "edit_arbitrary.js" %>
<div class="container">
  <% if current_user && current_user.admin? %>
 <div class="page-header col-sm-offset-2 col-sm-9">
  <h1>Edit Parking Meter:</h1>
  <div class="alert alert-success" role="alert" id="edit-alert" style="display:none"></div>
  <div class="alert alert-danger" role="alert" id="edit-danger" style="display:none"></div>
</div>

<form class="form-horizontal">
	<div class="form-group">
		<label for="meter-id" class="col-sm-3 control-label">ID: </label>
		<div class="col-sm-6">
			<input type="number" class="form-control" id="meter-id"></input>
		</div>
	</div>
</form>
<div class="col-sm-offset-3 col-sm-9">
  <button id="fetch" class="btn btn-default">Fetch Parking Meter</button>
</div>
<br><br><hr>

<form class="form-horizontal">
  <div class="form-group">
    <label for="parking_meter_id" class="col-sm-3 control-label">ID:</label>
    <div class="col-sm-6">
      <input type="number" class="form-control" id="parking_meter_id" name="parking_meter[id]" placeholder="">
    </div>
  </div>
  <div class="form-group">
    <label for="parking_meter_name" class="col-sm-3 control-label">Name:</label>
    <div class="col-sm-6">
      <input type="number" class="form-control" id="parking_meter_name" name="parking_meter[name]" placeholder="">
    </div>
  </div>
  <div class="form-group">
    <label for="parking_meter_price" class="col-sm-3 control-label">Price:</label>
    <div class="col-sm-6">
      <div class="input-group">
        <div class="input-group-addon">$</div>
        <input type="number" step="any" class="form-control" id="parking_meter_price" name="parking_meter[price]" placeholder="">
      </div>
    </div>
  </div>
  <div class="form-group">
    <label for="parking_meter_max_time" class="col-sm-3 control-label">Max Time:</label>
    <div class="col-sm-6">
      <div class="input-group">
        <input type="number" step="any" class="form-control" id="parking_meter_max_time" name="parking_meter[max_time]" placeholder=""><div class="input-group-addon">Hours</div>
      </div>
    </div>
  </div>
  <div class="form-group">
    <label for="parking_meter_start_time" class="col-sm-3 control-label">Start Time:</label>
    <div class="col-sm-6">
      <div class="input-group">
        <input type="number" class="form-control" id="parking_meter_start_time" name="parking_meter[start_time]" placeholder="">
        <div class="input-group-addon">Seconds Since Midnight</div>
      </div>
    </div>
  </div>
  <div class="form-group">
    <label for="parking_meter_end_time" class="col-sm-3 control-label">End Time:</label>
    <div class="col-sm-6">
      <div class="input-group">
        <input type="number" class="form-control" id="parking_meter_end_time" name="parking_meter[end_time]" placeholder="">
        <div class="input-group-addon">Seconds Since Midnight</div>
      </div>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-3 control-label">Edit Tags:</label>
    <div class="checkbox col-sm-9">
      <div class="checkbox">
        <label><input id="parking_meter_is_broken" name="parking_meter[is_broken]" type="checkbox" value="1"> Is Broken</label>
      </div>
      <div class="checkbox">
        <label><input id="parking_meter_is_occupied" name="parking_meter[is_occupied]" type="checkbox" value="1"> Is Occupied</label>
      </div>
    </div>
  </div>
  <div class="col-sm-offset-3 col-sm-6">
    <button type="button" id="submit" class="btn btn-default">Submit</button>
  </div>
</form>
<button type="button" class="btn btn-danger" id="delete" data-toggle="modal" data-target="#delete-modal">Delete Meter</button>
<div class="modal fade" id="delete-modal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="save-meter-modal-title">Delete this meter</h4>
      </div>
      <div class="modal-body" id="save-meter-modal-body">
        Are you sure you want to delete? This cannot be reversed.
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-danger" id="delete-confirm">Delete</button>
      </div>
    </div>
  </div>
</div>



<% else %>
 <div align="center" class="page-header">
  <h1>You do not have access to this page!</h1>
</div>
<p align="center"> You need to be an admin to see this page.
  <br>
<%= link_to 'Go back to the home page', '/' %>
<br><br><br>
<img src="http://memesvault.com/wp-content/uploads/Sad-Meme-Face-10.png" style="width:128px;height:128px;">
</p>
<% end %>

</div>
