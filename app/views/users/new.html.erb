<div class="login">
  <div class="container">
    <div class="row">
    <div class="page-header col-sm-offset-2 col-sm-9">
          <h1>Sign Up:</h1>
        </div>
      </div>
    <form action="/users" method="post" class="form-horizontal">
      <%= token_tag %>
       <div class="form-group">
        <p class="help-block col-sm-offset-2 col-sm-6" ><%= notice %></p>
      </div>
      <div class="form-group">
        <label for="user_first_name" class="col-sm-3 control-label">First Name</label>
        <div class="col-sm-6">
          <input type="text" class="form-control" id="user_first_name" name="user[first_name]" placeholder="First Name">
        </div>
      </div>
      <div class="form-group">
        <label for="user_last_name" class="col-sm-3 control-label">Last Name</label>
        <div class="col-sm-6">
          <input type="text" class="form-control" id="user_last_name" name="user[last_name]" placeholder="Last Name">
        </div>
      </div>
      <div class="form-group">
        <label for="user_email" class="col-sm-3 control-label">Email</label>
        <div class="col-sm-6">
          <input type="email" class="form-control" id="user_email" name="user[email]" placeholder="Email">
        </div>
      </div>
      <div class="form-group">
        <label for="user_password" class="col-sm-3 control-label">Password</label>
        <div class="col-sm-6">
          <input type="password" class="form-control" id="user_password" name="user[password]" placeholder="Password">
        </div>
      </div>
      <div class="col-sm-offset-3 col-sm-6">
        <button type="submit" name="commit" class="btn btn-default">Submit</button>
      </div>
    </form>
  </div>
</div>
</div>